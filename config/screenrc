startup_message off
altscreen on
vbell off
autodetach on
defscrollback 10000
msgwait 0
defutf8 on
maptimeout 0

defnonblock on

hardstatus off
hardstatus alwayslastline
hardstatus string '%{= g}[ %{G}%H%{g} ][%= %{= w}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{K} %l %{B} %m-%d %{W} %c:%s %{g}]'

bindkey ^[[d prev
bindkey ^[[1;2D prev
bindkey ^[[c next
bindkey ^[[1;2C next

bindkey ^[[Z focus

bindkey ^[[1~ beginning-of-line
bindkey ^[[4~ end-of-line
